@section script
{
    <script>
        $(function() {
            $(".nav.nav-pills.nav-stacked >li").on("click",
                function() {
                    var $other = $(this).siblings();
                    $other.removeClass("active");
                    $(this).addClass("active");
                });
            $(".nav.nav-pills.nav-stacked >li:first").trigger("click");
        })
    </script>
}
