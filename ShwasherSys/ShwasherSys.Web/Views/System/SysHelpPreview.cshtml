@using ShwasherSys.Authorization.Permissions
@model List<ShwasherSys.BaseSysInfo.SysHelp>
@{
    ViewBag.ActiveMenu = PermissionNames.PagesSysHelpPreview;
    ViewBag.Title = "系统帮助说明";
}
@section css
{
    <style>
        .i_category {
            z-index: 9999;
            position: fixed !important;
            right: 10px;
            top: 20vh;
        }
    </style>
}
