                var data = { CustomerId:$("#customerId").val(),OrderSendIds: orderSendIds ,Id:stickNum};
                $.extend(data, formUtil.Serialize($("#formInvoice")));
                SaveAjax({
                    url: window.appUrl + "OrderStickBill/Create",
                    data: data,
                    dataType: "json",
                    isValiate: false,
                    isAlert: false,
                    success: function(res) {
